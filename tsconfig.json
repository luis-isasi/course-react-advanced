{
  "compilerOptions": {
    "target": "ES6",
    "moduleResolution": "Node",
    //Está utilizando la importación dinámica, por lo que debe cambiar 
    //de esta manera para apuntar su código al esnext módulo
    "module": "esnext",
    "strict": false,
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "noEmit": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "./node_modules",
    "./dist"
  ],
}